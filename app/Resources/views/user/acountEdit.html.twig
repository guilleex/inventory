{% extends 'base.html.twig' %}

{% block title %}
	My Account
{% endblock %}

{% block body %}
<div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3" id="account-edit">

	{{ form_start(form) }}
		{{ form_errors(form) }}
		{{ form_row(form.email) }}
		{{ form_row(form.plainPassword.first, {
			'label': 'Password'
		}) }}
		{{ form_row(form.plainPassword.second, {
			'label': 'Repeat Password'
		}) }}

		<button type="submit" class="btn btn-primary" formnovalidate>Save</button>
	{{ form_end(form) }}
</div>

{% endblock %}